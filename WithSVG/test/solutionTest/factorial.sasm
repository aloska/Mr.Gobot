/*
Проверка работоспособности решателя - программа на асме вычисляет факториал
В In[1][0] лежит число, от которого надо взять факториал
В Out[0][1] лежит результат 
*/
asm:	
	ldin	x0, 1, 0		//загрузить в x0 число из входа 
	li		x1, 1			//засунуть 1 в x1
	blt		x0,	x1, 11		//если число меньше 1 - переход вперед на 11 команд
	beq		x0, x1, 10 		//если число равно 1 - тоже конец
	addi 	x1, x0, -1		//x1=x0-1
	li 		x0, 1		
	li 		x2, 1
	li		x31, 0
	beq		x1, x31, 5 		//do_fact: , переход на 5
	addi 	x2, x2, 1		
	mul 	x0, x0, x2	  	//x0=x0*x2
	addi 	x1, x1, -1		
	jmp 	-4				//переход к do_fact
	stout  	0, 1, x0		//сохраним на выходе
	nop
	nop
	